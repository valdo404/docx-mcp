---
import type { Lang } from '../i18n/ui';
import { useTranslations } from '../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const loginPath = lang === 'fr' ? '/connexion' : '/en/login';
---

<section class="hero">
  <div class="hero-ambient"></div>
  <div class="container">
    <div class="hero-content">
      <div class="hero-eyebrow">
        <span class="badge badge-available">{t('hero.badge')}</span>
        <span class="badge-text">{t('hero.badgeText')}</span>
      </div>

      <h1 class="hero-title">
        {t('hero.title.line1')}<br/>
        <span class="hero-highlight">{t('hero.title.line2')}</span>
      </h1>

      <p class="hero-description">{t('hero.description')}</p>

      <div class="hero-cta">
        <div data-auth-cta>
          <a href={loginPath} class="btn btn-primary">
            {t('hero.cta.start')}
          </a>
        </div>
        <a href="#products" class="btn btn-secondary">{t('hero.cta.roadmap')}</a>
      </div>

      <div class="hero-proof">
        <div class="proof-item">
          <span class="proof-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 12l2 2 4-4"/><circle cx="12" cy="12" r="10"/></svg>
          </span>
          <span>{t('hero.proof.claude')}</span>
        </div>
        <div class="proof-item">
          <span class="proof-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 12l2 2 4-4"/><circle cx="12" cy="12" r="10"/></svg>
          </span>
          <span>{t('hero.proof.opensource')}</span>
        </div>
        <div class="proof-item">
          <span class="proof-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 12l2 2 4-4"/><circle cx="12" cy="12" r="10"/></svg>
          </span>
          <span>{t('hero.proof.license')}</span>
        </div>
      </div>
    </div>

    <div class="hero-visual">
      <div class="visual-card">
        <div class="visual-header">
          <div class="visual-dots"><span></span><span></span><span></span></div>
          <span class="visual-title">Claude</span>
        </div>
        <div class="visual-content">
          <div class="chat-message user">
            <p>{t('chat.user')}</p>
          </div>
          <div class="chat-message assistant">
            <p>{t('chat.assistant')}</p>
            <div class="chat-file">
              <svg viewBox="0 0 24 24" fill="currentColor" width="16" height="16"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8" fill="none" stroke="white" stroke-width="2"/></svg>
              {t('chat.file')}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-xxl);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-s);
    padding: var(--spacing-m) var(--spacing-xl);
    border-radius: var(--radius-s);
    font-size: var(--font-size-300);
    font-weight: var(--font-weight-semibold);
    transition: all 0.15s ease;
    cursor: pointer;
    border: none;
    text-decoration: none;
  }

  .btn:hover { text-decoration: none; }

  .btn-primary {
    background: var(--brand-primary);
    color: white;
  }

  .btn-primary:hover { background: var(--brand-primary-hover); }

  .btn-secondary {
    background: transparent;
    color: var(--text-primary);
    border: 1px solid var(--border-default);
  }

  .btn-secondary:hover {
    background: var(--bg-layer-3);
    border-color: var(--border-strong);
  }

  .hero {
    position: relative;
    padding: 160px 0 80px;
    overflow: hidden;
  }

  .hero-ambient {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 150%;
    height: 600px;
    background: radial-gradient(ellipse at center top, rgba(0, 120, 212, 0.15) 0%, transparent 60%);
    pointer-events: none;
  }

  .hero .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
  }

  .hero-eyebrow {
    display: flex;
    align-items: center;
    gap: var(--spacing-m);
    margin-bottom: var(--spacing-xxl);
  }

  .badge {
    display: inline-flex;
    align-items: center;
    padding: var(--spacing-xs) var(--spacing-m);
    border-radius: var(--radius-s);
    font-size: var(--font-size-200);
    font-weight: var(--font-weight-semibold);
  }

  .badge-available {
    background: rgba(14, 112, 14, 0.2);
    color: #4caf50;
    border: 1px solid rgba(14, 112, 14, 0.3);
  }

  .badge-text {
    color: var(--text-tertiary);
    font-size: var(--font-size-200);
  }

  .hero-title {
    font-size: var(--font-size-900);
    font-weight: var(--font-weight-bold);
    line-height: var(--line-height-900);
    margin-bottom: var(--spacing-xxl);
    letter-spacing: -0.02em;
  }

  .hero-highlight { color: var(--brand-primary); }

  .hero-description {
    font-size: var(--font-size-400);
    line-height: 1.6;
    color: var(--text-secondary);
    margin-bottom: var(--spacing-xxxl);
    max-width: 500px;
  }

  .hero-cta {
    display: flex;
    gap: var(--spacing-l);
    margin-bottom: var(--spacing-xxxl);
  }

  .hero-proof {
    display: flex;
    gap: var(--spacing-xxl);
  }

  .proof-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-s);
    color: var(--text-tertiary);
    font-size: var(--font-size-200);
  }

  .proof-icon {
    width: 16px;
    height: 16px;
    color: #4caf50;
  }

  .proof-icon svg {
    width: 100%;
    height: 100%;
  }

  .hero-visual { position: relative; }

  .visual-card {
    background: var(--bg-layer-2);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-l);
    overflow: hidden;
    box-shadow: var(--shadow-28);
  }

  .visual-header {
    display: flex;
    align-items: center;
    gap: var(--spacing-m);
    padding: var(--spacing-m) var(--spacing-l);
    background: var(--bg-layer-3);
    border-bottom: 1px solid var(--border-subtle);
  }

  .visual-dots { display: flex; gap: 6px; }

  .visual-dots span {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--bg-layer-4);
  }

  .visual-dots span:nth-child(1) { background: #ff5f56; }
  .visual-dots span:nth-child(2) { background: #ffbd2e; }
  .visual-dots span:nth-child(3) { background: #27c93f; }

  .visual-title {
    font-size: var(--font-size-200);
    color: var(--text-tertiary);
  }

  .visual-content {
    padding: var(--spacing-xxl);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-l);
  }

  .chat-message {
    padding: var(--spacing-l);
    border-radius: var(--radius-m);
    max-width: 90%;
  }

  .chat-message p {
    font-size: var(--font-size-300);
    line-height: 1.5;
  }

  .chat-message.user {
    background: var(--bg-layer-3);
    color: var(--text-primary);
    align-self: flex-end;
  }

  .chat-message.assistant {
    background: rgba(0, 120, 212, 0.1);
    border: 1px solid rgba(0, 120, 212, 0.2);
    color: var(--text-primary);
  }

  .chat-file {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-s);
    margin-top: var(--spacing-m);
    padding: var(--spacing-s) var(--spacing-m);
    background: var(--brand-primary);
    border-radius: var(--radius-s);
    font-size: var(--font-size-200);
    color: white;
  }

  @media (max-width: 1024px) {
    .hero .container {
      grid-template-columns: 1fr;
      gap: 60px;
    }

    .hero-visual {
      order: -1;
      max-width: 500px;
      margin: 0 auto;
    }

    .hero-content { text-align: center; }
    .hero-description { max-width: 100%; }
    .hero-cta { justify-content: center; }
    .hero-proof { justify-content: center; }
  }

  @media (max-width: 640px) {
    .hero-title {
      font-size: var(--font-size-700);
      line-height: var(--line-height-700);
    }

    .hero-cta { flex-direction: column; }

    .hero-proof {
      flex-direction: column;
      gap: var(--spacing-m);
    }
  }
</style>
